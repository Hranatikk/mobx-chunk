{
    "compilerOptions": {
      "target": "ES2019",
      "module": "ESNext",
      "declaration": true,
      "declarationDir": "dist",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "jsx": "react",
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
  }
  